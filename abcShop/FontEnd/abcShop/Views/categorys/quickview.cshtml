    <link rel="stylesheet" type="text/css" href="~/forntEnd/css/libs/animate.css" />
    <link rel="stylesheet" type="text/css" href="~/forntEnd/css/libs/hover.css" />
    <link rel="stylesheet" type="text/css" href="~/forntEnd/css/color.css" media="all" />
    <link rel="stylesheet" type="text/css" href="~/forntEnd/css/theme.css" media="all" />
    <link rel="stylesheet" type="text/css" href="~/forntEnd/css/responsive.css" media="all" />
    <link rel="stylesheet" type="text/css" href="~/forntEnd/css/browser.css" media="all" />
    <!-- <link rel="stylesheet" type="text/css" href="css/rtl.css" media="all"/> -->
</head>
<body>
    <div class="wrap">
        <section id="content">
            <div class="detail-lightbox">


                <form id="cartForm">
                    <input type="hidden" name="product_id" id="product_id" value="@Model.product_id" />
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="detail-gallery">
                                <div class="mid">
                                    <img src="@ViewBag.imgPath@Model.main_image" alt="@Model.p_name" />
                                </div>

                            </div>
                            <!-- End Gallery -->
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="detail-info">
                                <h2 class="title30 font-bold">
                                    <a href="/product/detail/@Model.product_id">@Model.p_name</a>
                                </h2>
                                <div class="product-price">
                                    <ins class="color">৳ <span id="mainPrice">@Model.price</span><span id="cprice">@Model.v_price</span></ins>
                                </div>
                                <div class="product-rate">
                                    <div class="product-rating" style="width:100%"></div>
                                </div>
                                <p class="desc">
                                    @Html.Raw(Model.discription)
                                </p>

                                <div>
                                    @Html.Raw(ViewBag.variant)
                                </div>
                                <ul class="list-inline-block wrap-qty-extra">
                                    <li>
                                        <div class="detail-qty">
                                            Quentity<input name="quentity" id="quentity" @*onchange="qty()"*@ value="1" type="number" class="form-control" />

                                        </div>
                                    </li>
                                    <li>
                                        <div class="product-extra-link">
                                            <a href="javascript:void(0)" onclick="addCart()" class="addcart-link">Add to cart</a>
                                            <a href="javascript:void(0)" class="wishlist-link"><i class="fa fa-heart-o" aria-hidden="true"></i><span>Wishlist</span></a>

                                        </div>
                                    </li>
                                </ul>


                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
        <!-- End Content -->
    </div>
    <script type="text/javascript" src="~/forntEnd/js/jquery.js"></script>
    <script type="text/javascript" src="~/forntEnd/js/libs/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/forntEnd/js/libs/jquery.fancybox.js"></script>
    <script type="text/javascript" src="~/forntEnd/js/libs/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/forntEnd/js/libs/owl.carousel.min.js"></script>
    <script type="text/javascript" src="~/forntEnd/js/libs/jquery.jcarousellite.min.js"></script>
    <script type="text/javascript" src="~/forntEnd/js/libs/jquery.elevatezoom.js"></script>
    <script type="text/javascript" src="~/forntEnd/js/libs/jquery.mCustomScrollbar.js"></script>
    <script type="text/javascript" src="~/forntEnd/js/libs/slick.js"></script>
    <script type="text/javascript" src="~/forntEnd/js/libs/popup.js"></script>
    <script type="text/javascript" src="~/forntEnd/js/libs/timecircles.js"></script>
    <script type="text/javascript" src="~/forntEnd/js/libs/wow.js"></script>
    <script type="text/javascript" src="~/forntEnd/js/theme.js"></script>
</body>

