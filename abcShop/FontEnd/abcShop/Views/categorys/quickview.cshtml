    <link rel="stylesheet" type="text/css" href="~/forntEnd/css/libs/jquery.fancybox.css" />
    <link rel="stylesheet" type="text/css" href="~/forntEnd/css/libs/jquery-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="~/forntEnd/css/libs/owl.carousel.css" />
    <link rel="stylesheet" type="text/css" href="~/forntEnd/css/libs/owl.transitions.css" />
