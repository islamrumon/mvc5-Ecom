@model abcShop.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div id="content">
    <div class="content-page">
        <div class="container" style="margin-top:20px">
            @*<div class="shop-banner banner-adv line-scale zoom-image">
                    <a href="#" class="adv-thumb-link"><img src="~/forntEnd/images/page/about.jpg" alt="" /></a>
                    <div class="banner-info">
                        <h2 class="title30 color">Login/Register</h2>
                        <div class="bread-crumb white"><a href="#" class="white">Home</a><span>Check Out</span></div>
                    </div>
                </div>*@
            <!-- ENd Banner -->
            <div class="register-content-box">
                <h2 class="title30 font-bold text-uppercase text-center">Register</h2>
                <div class="row">
                    <div class="col-sm-12 col-md-4">
                    </div>
                    <div class="col-md-4 col-sm-12 col-ms-12">
                        <div class="block">

                            @using (Html.BeginForm("Register", "mamber", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = " control-label" })
                                    <div class="">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = " control-label" })
                                    <div class="">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-4 col-md-push-4">
                                        <input type="submit" class="shop-button bg-color" value="Register" />
                                    </div>
                                </div>
                            }
                        </div>

                        <!---End Login Form-->

                        @*<section id="socialLoginForm">
                            @Html.Partial("_ExternalLoginsListPartial", new abcShop.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                        </section>*@


                        <hr />
                        <p>
                            @Html.ActionLink("Already have an account?", "Login")
                        </p>
                      
                    </div>

                </div>
            </div>
            <div class="col-sm-12 col-md-4">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
