using Microsoft.AspNet.Identity

    
      <a href="/" class="dropdown-toggle" data-toggle="dropdown">

        <img src="~/AppFiles/@Session["pic"].ToString()" class="rounded-circle float-left mr-2" alt="User Image">
        <span class="status"></span>
        <h4 class="name">@User.Identity.Name</h4>
    </a>

    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="dropdown-menu">
            <li><a href="@Url.Action("Index","Manage")"><i class="fa fa-user"></i> My Profile</a></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-power-off"></i> Logout</a></li>
        </ul>
    }

    
