        $(document).ready(function () {
            "use strict";

            $('.data-table1').DataTable({
                "lengthMenu": [[5, 10, 15, 25, 50, -1], [5, 10, 15, 25, 50, "All"]],
                "ordering": false                
            });


            //var url = "/settings/saveVariant";
